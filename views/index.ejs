  <style>
    body {
        font-family:Arial, Helvetica, sans-serif;
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: center;
        background-color:#f3f3f3;
        }
        ul {
          list-style-type: none;
          margin-top: 5px;
          padding: 0;
          overflow: hidden;
          border: 1px solid #e7e7e7;
          background-color: #f3f3f3;
          border-radius: 25px;
        }

        li {
          float: left;
        }

        li a {
          
          display: block;
          color: #666;
          text-align: center;
          padding: 14px 16px;
          text-decoration: none;
        }

        li a:hover:not(.active) {
          background-color: #ddd;
        }

        li a.active {
          color: white;
          background-color: #04AA6D;
        }
        #footer {
          position: fixed;
          height: 70px;
          left: 0;
          bottom: 0;
          width: 100%;
          background-color: #04AA6D;
          color: white;
          padding: 10px;
        }

        #new-room-parent {
          position: absolute;
          top: 50%;
          left: 31%;
          transform: translate(-50%, - 50%);
        }
        .new-room-button {
          width: 500%;
          padding: 12px 20px;
          height: 60px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid ;
          border-radius: 4px;
          box-sizing: border-box;
        }
  </style>

</head>
